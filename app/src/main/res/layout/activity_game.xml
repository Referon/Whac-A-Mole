<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/yellow"
        android:shadowColor="@color/orange"
        android:shadowRadius="3"
        android:fontFamily="@font/font"
        android:textSize="64sp"
        android:text="3..2..1"/>

    <LinearLayout
        android:id="@+id/lol1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="230dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/hole1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_hole"/>

        <ImageView
            android:id="@+id/hole2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_hole"/>

        <ImageView
            android:id="@+id/hole3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_hole"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lolmole1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="230dp"
        app:layout_constraintStart_toStartOf="@id/lol1"
        app:layout_constraintEnd_toEndOf="@id/lol1"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mole1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            android:src="@drawable/ic_mole"/>

        <ImageView
            android:id="@+id/mole2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:visibility="invisible"
            android:src="@drawable/ic_mole"/>

        <ImageView
            android:id="@+id/mole3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:visibility="invisible"
            android:src="@drawable/ic_mole"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lol2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="230dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintStart_toEndOf="@id/lol1"
        app:layout_constraintEnd_toStartOf="@id/lol3"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/hole4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_hole"/>

        <ImageView
            android:id="@+id/hole5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_hole"/>

        <ImageView
            android:id="@+id/hole6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_hole"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lolmole2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="230dp"
        app:layout_constraintStart_toStartOf="@id/lol2"
        app:layout_constraintEnd_toEndOf="@id/lol2"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mole4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            android:src="@drawable/ic_mole"/>

        <ImageView
            android:id="@+id/mole5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:visibility="invisible"
            android:src="@drawable/ic_mole"/>

        <ImageView
            android:id="@+id/mole6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:visibility="invisible"
            android:src="@drawable/ic_mole"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lol3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="230dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/hole7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_hole"/>

        <ImageView
            android:id="@+id/hole8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_hole"/>

        <ImageView
            android:id="@+id/hole9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_hole"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lolmole3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="230dp"
        app:layout_constraintStart_toStartOf="@id/lol3"
        app:layout_constraintEnd_toEndOf="@id/lol3"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mole7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            android:src="@drawable/ic_mole"/>

        <ImageView
            android:id="@+id/mole8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:visibility="invisible"
            android:src="@drawable/ic_mole"/>

        <ImageView
            android:id="@+id/mole9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:visibility="invisible"
            android:src="@drawable/ic_mole"/>


    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="32dp"
        android:textColor="@color/yellow"
        android:shadowColor="@color/orange"
        android:shadowRadius="20"
        android:fontFamily="@font/font"
        android:text="30 s"
        android:textSize="44sp"/>

    <TextView
        android:id="@+id/scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="32dp"
        android:textColor="@color/yellow"
        android:shadowColor="@color/orange"
        android:shadowRadius="20"
        android:fontFamily="@font/font"
        android:text="0"
        android:textSize="44sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>